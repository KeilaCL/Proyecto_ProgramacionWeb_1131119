@model Proyecto_ProgramacionWeb_1131119.Models.PersonaPaciente
@{
    ViewData["Title"] = "Modificar";
}

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <title>Material Design for Bootstrap</title>
    <!-- MDB icon -->
    <link rel="icon" href="img/mdb-favicon.ico" type="image/x-icon" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.2/css/all.css" />
    <!-- Google Fonts Roboto -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;900&display=swap" />
    <!-- MDB -->
    <link rel="stylesheet" href="~/css/bootstrap-login-form.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</head>

    <body>
    <section class="h-100 h-custom gradient-custom-2">
        <div class="container py-5 h-100">
            <form asp-action="Modificar" method="post">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12">
                        <div class="card card-registration card-registration-2" style="border-radius: 15px;">
                            <div class="card-body p-0">
                                <div class="row g-0">
                                    <div class="col-lg-6">
                                        <div class="p-5">
                                            <h3 class="fw-normal mb-5" style="color: rgb(60, 158, 250);">Información General</h3>
                                            <input type="hidden" asp-for="persona.IdPersona" />
                                            <div class="row">
                                                <div class="col-md-6 mb-4 pb-2">
                                                    <div class="form-outline">
                                                        <input type="text" id="form3Examplev2" asp-for="persona.Nombre" value="@Model.persona.Nombre @Model.persona.Apellido" class="form-control form-control-lg" />
                                                        <label class="form-label" for="form3Examplev2">Nombre</label>
                                                    </div>

                                                </div>
                                                <div class="col-md-6 mb-4 pb-2">

                                                    <div class="form-outline">
                                                        <input type="text" id="form3Examplev3" asp-for="persona.Apellido" value="@Model.persona.Apellido" class="form-control form-control-lg" />
                                                        <label class="form-label" for="form3Examplev3">Apellido</label>
                                                    </div>

                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6 mb-4 pb-2">

                                                    <div class="form-outline">
                                                        <input type="number" id="form1Example23" asp-for="persona.DPI" value="@Model.persona.DPI" class="form-control form-control-lg" />
                                                        <label class="form-label" for="form1Example23">DPI</label>
                                                    </div>

                                                </div>
                                                <div class="col-md-6 mb-4 pb-2">

                                                    <div class="form-outline">
                                                        <input type="date" id="form1Example23" asp-for="persona.FechaNacimiento" value="@Model.persona.FechaNacimiento.ToString("yyyy-MM-dd")" class="form-control form-control-lg" />
                                                        <label class="form-label select-label" for="form1Example23">Fecha Nacimiento</label>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="mb-4 pb-2">
                                                <div class="form-outline">
                                                    <input type="email" id="form1Example13" asp-for="persona.Correo" value="@Model.persona.Correo" class="form-control form-control-lg" />
                                                    <label class="form-label" for="form1Example13">Correo electronico</label>
                                                </div>
                                            </div>
                                            <div class="mb-4 pb-2">
                                                <div class="form-outline">
                                                    <input type="text" id="form3Examplev4" asp-for="persona.Direccion" value="@Model.persona.Direccion" class="form-control form-control-lg" />
                                                    <label class="form-label" for="form3Examplev4">Direccion</label>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-6 mb-4 pb-2 mb-md-0 pb-md-0">
                                                    <div class="form-outline">
                                                        <input type="number" id="form3Examplev5" asp-for="persona.Telefono" value="@Model.persona.Telefono" class="form-control form-control-lg" />
                                                        <label class="form-label" for="form3Examplev5">Telefono</label>
                                                    </div>

                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-outline">
                                                        <label class="form-label" asp-for="persona.Sexo" value="@Model.persona.Sexo" for="form3Examplev5">Sexo</label>
                                                        <br>
                                                        <div class="form-check form-check-inline">
                                    
                                                            <label class="form-check-label" id="femenino" value="Femenino" for="femenino">@Html.RadioButtonFor(model => model.persona.Sexo, "Femenino")Femenino</label>
                                                        </div>
                                                        <div class="form-check form-check-inline">
                                                            <label class="form-check-label" id="masculino" value="Masculino" for="masculino">@Html.RadioButtonFor(model => model.persona.Sexo, "Masculino")Masculino</label>
                                                        </div>
                                                        <div class="form-check form-check-inline">
                                                            <label class="form-check-label" name="Sexo" id="otro" value="Otro" for="otro"> @Html.RadioButtonFor(model => model.persona.Sexo, "Otro")Otro</label>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="col-lg-6 bg-indigo text-white" style="background-color: rgb(60, 158, 250)">
                                        <div class="p-5">
                                            <h3 class="fw-normal mb-5">Detalles Personal</h3>

                                            <div class="row">
                                                <div class="col-md-6 mb-4 pb-2">
                                                    <div class="form-outline form-white">
                                                        <input type="number" id="form3Examplev5" asp-for="paciente.Peso" value="@Model.paciente.Peso" class="form-control form-control-lg" style="background-color: rgb(60, 158, 250)" required />
                                                        <label class="form-label" for="form3Examplev5">Peso</label>
                                                    </div>
                                                </div>
                                                <div class="col-md-6 mb-4 pb-2">
                                                    <div class="form-outline form-white">
                                                        <input type="number" id="form3Examplea5" asp-for="paciente.Estatura" value="@Model.paciente.Estatura"  class="form-control form-control-lg" style="background-color: rgb(60, 158, 250)" required />
                                                        <label class="form-label" for="form3Examplea5">Estatura</label>
                                                    </div>

                                                </div>
                                            </div>

                                            <h3 class="fw-normal mb-5">Usuario</h3>
                                            <div class="row">
                                                <div class="col-md-8 mb-4 pb-2">
                                                    <div class="form-outline form-white">
                                                        <input type="text" id="form3Examplev5" asp-for="usuario.NombreUsuario" value="@Model.usuario.NombreUsuario" class="form-control form-control-lg" style="background-color: rgb(60, 158, 250)" required />
                                                        <label class="form-label" for="form3Examplev5">NombreUsuario</label>
                                                    </div>
                                                </div>
                                                <div class="col-md-8 mb-4 pb-2">
                                                    <div class="form-outline form-white">
                                                        <input type="password" id="password" asp-for="usuario.Contraseña" value="@Model.usuario.Contraseña" class="form-control form-control-lg" style="background-color: rgb(60, 158, 250)" required />
                                                        <label class="form-label" for="form3Example">Contraseña</label>
                                                    </div>



                                                </div>
                                                <div class="col-md-2">
                                                    <div class="form-outline form-white">
                                                        <button type="button" class="btn btn-light" onclick="togglePassword()">
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                                                                <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z" />
                                                                <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z" />
                                                            </svg>
                                                        </button>

                                                        <script>
                                                            function togglePassword() {
                                                                var passwordInput = document.getElementById("password");
                                                                if (passwordInput.type === "password") {
                                                                    passwordInput.type = "text";
                                                                } else {
                                                                    passwordInput.type = "password";
                                                                }
                                                            }
                                                        </script>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row align-items-center mt-5 pt-5 mb-0">
                                                <button class="btn btn-light btn-lg mt-5"
                                                        data-mdb-ripple-color="dark">
                                                    Modificar
                                                </button>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>
    <script type="text/javascript" src="~/js/mdb.min.js"></script>
    <!-- Custom scripts -->
    <script type="text/javascript"></script>
    </body>